Problem link - https://leetcode.com/problems/three-consecutive-odds/description/?envType=daily-question&envId=2025-05-11

class Solution {
    public boolean threeConsecutiveOdds(int[] arr) {
        int cnt = 0;
        for(int x:arr)
        {
            if(x%2!=0)
            cnt++;
            else
            cnt = 0;
            if(cnt==3)
            return true;
        }
        return false;
    }
}
